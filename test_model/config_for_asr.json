{
    "name": "test",
    "n_gpu": 1,
    "text_encoder": {
        "type": "CTCCharTextEncoder",
        "args": {}
    },
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {
                "n_mels": 256
            }
        },
        "log_spec": true
    },
    "augmentations": {
        "random_apply_p": 0.5,
        "wave": [],
        "spectrogram": []
    },
    "ss_arch": {
        "type": "SpExPlusModel",
        "args": {
            "L1": 20, 
            "L2": 80, 
            "L3": 160, 
            "N": 256, 
            "ResNetBlock_cnt": 3,
            "TCN_cnt": 8,
            "speakers_cnt": 251
        }
    },
    "asr_arch": {
        "type": "DeepSpeech2Model",
        "args": {
            "n_feats": 256,
            "n_rnn_layers": 6,
            "rnn_hidden_size": 512,
            "rnn_dropout": 0.2
        }
    },
    "data": {
        "test": {
            "batch_size": 1,
            "num_workers": 1,
            "datasets": [
                {
                    "type": "MixtureDataset",
                    "args": {
                        "path": "/Users/timgritsaev/Desktop/dla/speaker_separation/data/mixture/test",
                        "limit": 2
                    }
                }
            ]
        }
    },
    "metrics": [
        {
            "type": "SISDRMetric",
            "args": {
                "name": "SI-SDR"
            }
        },
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER target"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER target"
            }
        },
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER pred"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER pred"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 10000,
            "epochs": 4,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 4,
        "iters_to_accumulate": 2,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "dla2_ss",
        "len_epoch": 10000,
        "grad_norm_clip": 25
    }
}
