{
    "name": "one_batch_test",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {},
        "log_spec": true
    },
    "augmentations": {
        "random_apply_p": 0.5,
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "SpExPlusModel",
        "args": {
            "L1": 20, 
            "L2": 80, 
            "L3": 160, 
            "N": 256, 
            "ResNetBlock_cnt": 3,
            "TCN_cnt": 8
        }
    },
    "data": {
        "train": {
            "batch_size": 4,
            "num_workers": 1,
            "datasets": [
                {
                    "type": "MixtureDataset",
                    "args": {
                        "part": "train-clean-100-mixed",
                        "cut_mix": 60000
                    }
                }
            ]
        },
        "test": {
            "batch_size": 1,
            "num_workers": 1,
            "datasets": [
                {
                    "type": "MixtureDataset",
                    "args": {
                        "part": "test-clean-mixed",
                        "limit": 1000
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 1e-3,
            "weight_decay": 1e-5
        }
    },
    "loss": {
        "type": "SpExPlusLoss",
        "args": {
            "alpha": 0.1,
            "beta": 0.1,
            "gamma": 0.5
        }
    },
    "metrics": [
        {
            "type": "PESQMetric",
            "args": {
                "name": "PESQ"
            }
        },
        {
            "type": "SISDRMetric",
            "args": {
                "name": "SI-SDR"
            }
        },
        {
            "type": "AccuracyMetric",
            "args": {
                "name": "accuracy"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 6000,
            "epochs": 3,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 3,
        "iters_to_accumulate": 2,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min test_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "dla2_ss",
        "len_epoch": 6000,
        "grad_norm_clip": 25
    }
}
